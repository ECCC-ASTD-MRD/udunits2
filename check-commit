exec >$HOME/commit.log 2>&1
hostname
id
echo pwd=`pwd`
echo '$0'=\"$0\"
for arg in "$@"; do
    echo arg=\"$arg\"
done

topSrcDir=`dirname $0`

if cd $topSrcDir; then
    if test -f remote-checks.pid; then
	kill `cat remote-checks.pid`
    fi

    (sleep 10; echo done) &
    echo $! >remote-checks.pid
fi
