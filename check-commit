exec >$HOME/commit.log 2>&1
hostname
id
echo pwd=`pwd`
echo '$0'=\"$0\"
for arg in "$@"; do
    echo arg=\"$arg\"
done
exit

topSrcDir=`dirname $0`

if cd $topSrcDir; then
    if test -f remote-checks.pid; then
	kill -- -`cat remote-checks.pid` 2>/dev/null
    fi

    (sleep 30; make remote-checks; rm -f remote-checks.pid) &
    echo $! >remote-checks.pid
fi
